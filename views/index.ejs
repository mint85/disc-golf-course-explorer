<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="../public/css/style.css">
    <title>Disc Golf Course Explorer</title>
</head>

<body>
    <%- include('../partials/header.ejs') %>
    <section class="hero-section">
        <div class="hero-image">
            <div class="hero-text">
                <h1>Disc Golf Course Explorer</h1>
                <h4>Scroll down to find your new favorite disc golf course</h4>
            </div>
        </div>
    </section>
    <section class="course-list-section">
        <div class="course-list">
            <div class="d-flex justify-content-center">
                <ul class="list-group">
                    <% courses.forEach(course => { %>
                    <li class="list-group-item">
                        <a href="/courses/<%=course._id;%>"><%=course.name;%></a>
                        <p><%=course.location%></p>
                        <a href="/courses/<%=course._id;%>"><img src="<%= course.image1 %>" alt="Course Image 1"
                                class="course-image-index"></a><br>
                        <div class="index-buttons">
                            <a href="/courses/<%= course._id %>/edit" class="btn btn-warning" role="button">Edit Course</a>
                            <form action="/courses/<%=course.id%>?_method=DELETE" method="POST">
                                <input class="btn btn-danger" type="submit" value="DELETE">
                            </form>
                        </div>
                    </li>
                    <% }); %>
                </ul>
            </div>
        </div>
    </section>
    <a href="/courses/new">Add A New Course</a>
</body>

</html>